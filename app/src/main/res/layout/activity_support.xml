<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Support">

    <TextView
        android:id="@+id/SupportNPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Support &amp; Promotions"
        android:gravity="center|top"
        android:textSize="35dp"
        android:paddingBottom="30dp"/>

    <LinearLayout
        android:layout_below="@+id/SupportNPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Social">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="10dp"
            app:srcCompat="@drawable/facebook"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/youtube"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/messenger"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/messanger"
            android:clickable="true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Social">

        <ImageView
            android:id="@+id/bloodman"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/bloodman"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/googleplus"
            android:layout_width="130dp"
            android:layout_height="130dp"
             app:srcCompat="@drawable/googleplus"
            android:clickable="true"
            android:focusable="auto"/>

        <ImageView
            android:id="@+id/unickmart"
            android:layout_width="130dp"
            android:layout_height="130dp"
             app:srcCompat="@drawable/unickmart"
            android:clickable="true"/>

    </LinearLayout>


</RelativeLayout>